<Application
    x:Class="DungeonItems.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DungeonItems"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:controls="using:DungeonItems.Controls">

    <Application.Resources>
        <muxc:XamlControlsResources>
            <muxc:XamlControlsResources.MergedDictionaries>
                <!--<ResourceDictionary Source="/Styles/AcrylicBrush_19h1_themeresources.xaml" />-->
                <ResourceDictionary>
                    <ItemsPanelTemplate x:Key="HorizontalItemsPanel">
                        <toolkit:WrapPanel Background="{ThemeResource AccentAcrylicBackgroundFillColorBaseBrush}"
                              Padding="0,0,0,0"
                              VerticalSpacing="5"
                              HorizontalSpacing="5" 
                              />
                    </ItemsPanelTemplate>
   
                </ResourceDictionary>

            </muxc:XamlControlsResources.MergedDictionaries>
        </muxc:XamlControlsResources>


    </Application.Resources>


</Application>
